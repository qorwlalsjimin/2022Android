<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/base_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:text="전화번호"/>

    <EditText
        android:layout_toRightOf="@id/base_text"
        android:layout_alignBaseline="@id/base_text"
        android:text="000-0000-0000"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@id/base_text"
        android:id="@+id/base_btn_reset"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#E3D664"
        android:textColor="@color/black"
        android:text="취소"
        />

    <Button
        android:layout_below="@id/base_text"
        android:layout_toLeftOf="@id/base_btn_reset"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E3D664"
        android:textColor="@color/black"
        android:text="입력"
        />
</RelativeLayout>