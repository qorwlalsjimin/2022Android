<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="-90dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgv01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy01"/>
        <ImageView
            android:id="@+id/imgv02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy02"/>
        <ImageView
            android:id="@+id/imgv03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy03"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="-90dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgv04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy04"/>
        <ImageView
            android:id="@+id/imgv05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy05"/>
        <ImageView
            android:id="@+id/imgv06"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy06"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height= "0dp"
        android:layout_weight="3"
        android:layout_marginBottom="-40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgv07"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy07"/>
        <ImageView
            android:id="@+id/imgv08"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy08"/>
        <ImageView
            android:id="@+id/imgv09"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/boy09"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_vote_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="투표종료"/>
</LinearLayout>